{
  "name": "hapi-geolink",
  "version": "0.0.1",
  "description": "Geolink plugin for hapi-server.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "init": "mkdir public && cd public && mkdir js css img libs && cd ..",
    "js:clean": "rm -rf public/js/*",
    "js:compile": "webpack -p",
    "build:js": "npm run js:clean && npm run js:compile",
    "css:clean": "rm -rf public/css/*",
    "css:compile": "node-sass src/sass/ -o public/css/ --output-style compressed",
    "css:rename": "renamer \"public/css/*\" --find \".css\" --replace \".min.css\"",
    "css:autoprefix": "postcss -r public/css/* -u autoprefixer",
    "build:css": "npm run css:clean && npm run css:compile && npm run css:rename && npm run css:autoprefix",
    "assets:clean": "rm -rf public/img/*",
    "assets:copy": "cp -a src/img/* public/img | true",
    "build:assets": "npm run assets:clean && npm run assets:copy",
    "libs:clean": "rm -rf public/libs/*",
    "libs:copy": "cp -a src/libs/* public/libs | true",
    "build:libs": "npm run libs:clean && npm run libs:copy",
    "build": "npm run build:js && npm run build:css && npm run build:assets && npm run build:libs"
  },
  "author": "Miguel Serrano",
  "license": "ISC",
  "dependencies": {
    "aguid": "^1.0.4",
    "bcryptjs": "^2.3.0",
    "boom": "^4.1.0",
    "colorbrewer": "^1.0.0",
    "crumb": "^6.0.3",
    "flat": "^2.0.1",
    "foundation-sites": "^6.2.3",
    "jade": "^1.11.0",
    "joi": "^9.0.4",
    "jquery": "^3.1.1",
    "jsonwebtoken": "^7.1.9",
    "lodash": "^4.16.2",
    "mssql": "^3.3.0",
    "node-fetch": "^1.6.3",
    "socket.io": "^1.4.8",
    "socketio-jwt": "^4.5.0",
    "topojson": "^1.6.27",
    "twitter-node-client": "0.0.6",
    "whatwg-fetch": "^1.0.0",
    "x-ray": "^2.3.0",
    "yelp": "^1.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "exports-loader": "^0.6.3",
    "expose-loader": "^0.7.1",
    "imports-loader": "^0.6.5",
    "node-sass": "^3.10.0",
    "postcss-cli": "^2.6.0",
    "renamer": "^0.5.7",
    "webpack": "^1.13.2"
  }
}
